---
- name: Configure Cisco switches
  hosts: switches
  gather_facts: no
  tasks:
    - name: Ensure the switch is in enable mode
      ios_command:
        commands:
          - enable
          - configure terminal

    - name: Disable IP domain lookup
      ios_config:
        lines:
          - no ip domain-lookup

    - name: Set hostname
      ios_config:
        lines:
          - hostname {{ inventory_hostname }}

    - name: Remove existing banner motd
      ios_config:
        lines:
          - no banner motd
      ignore_errors: yes

    - name: Configure the login banner
      cisco.ios.ios_banner:
        banner: motd
        text: Unauthorized access to this device is prohibited!
        state: present

    - name: Configure SNMP community
      ios_config:
        lines:
          - snmp-server community public RO

    - name: Configure SNMP host
      ios_config:
        lines:
          - snmp-server host 10.10.44.6 version 2c public

    - name: Enable SNMP traps
      ios_config:
        lines:
          - snmp-server enable traps

    - name: Create VLAN 10
      ios_config:
        lines:
          - vlan 10
          - name Users

    - name: Create VLAN 44
      ios_config:
        lines:
          - vlan 44
          - name Management

    - name: Configure interface VLAN 10
      ios_config:
        lines:
          - interface vlan 10
          - description All users
          - no shutdown

    - name: Configure interface VLAN 44
      ios_config:
        lines:
          - interface vlan 44
          - description Management
          - ip address {{ ansible_host }} 255.255.255.224
          - no shutdown

    - name: Set default gateway
      ios_config:
        lines:
          - ip default-gateway 10.10.44.10

    - name: Set enable secret
      ios_config:
        lines:
          - enable secret {{ ansible_password }}

    - name: Enable service password encryption
      ios_config:
        lines:
          - service password-encryption

    - name: Set IP domain name
      ios_config:
        lines:
          - ip domain-name syntra.be

    - name: Create user with secret
      ios_config:
        lines:
          - username {{ ansible_user }} secret {{ ansible_password }}

    - name: Configure console line password
      ios_config:
        lines:
          - line console 0
          - password {{ ansible_password }}

    - name: Enable login on console line
      ios_config:
        lines:
          - line console 0
          - login

    - name: Configure VTY lines for SSH transport
      ios_config:
        lines:
          - line vty 0 4
          - transport input ssh
          - login local

    - name: Generate RSA key
      ios_command:
        commands:
          - crypto key generate rsa modulus 2048
      ignore_errors: yes

    - name: Configure trunk interfaces
      ios_config:
        lines:
          - interface range e0/0 - 3, e1/0 - 3, e2/0 - 3, e3/0 - 1
          - description used switch ports
          - switchport trunk encapsulation dot1q
          - switchport mode trunk
          - switchport trunk allowed vlan 10,44
          - no shutdown

    - name: Configure connection to other L3 switch
      ios_config:
        lines:
          - interface range e4/0 - 3
          - description Connection to other L3 switch
          - channel-group 1 mode active
          - no shutdown

    - name: Configure Port-channel 1 description
      ios_config:
        lines:
          - interface Port-channel1
          - description Connected to other L3 (EtherChannel)

    - name: Configure Port-channel 1 settings
      ios_config:
        lines:
          - switchport trunk encapsulation dot1q
          - switchport mode trunk
          - no shutdown
          - port-channel load-balance dst-mac

    - name: Configure uplink interfaces
      ios_config:
        lines:
          - interface range e5/1 - 3
          - description Uplink
          - switchport trunk encapsulation dot1q
          - switchport trunk allowed vlan 10,44
          - switchport mode trunk
          - channel-group 2 mode on
          - no shutdown

    - name: Configure Port-channel 2
      ios_config:
        lines:
          - interface Port-channel2
          - description Connected to MikroTik bonding1 (EtherChannel)
          - switchport trunk encapsulation dot1q
          - switchport trunk allowed vlan 10,44
          - switchport mode trunk
          - no shutdown

    - name: Configure management interfaces
      ios_config:
        lines:
          - interface range e3/2 - 3
          - description Management
          - switchport access vlan 44
          - switchport mode access
          - no shutdown

    - name: Configure reserve interface
      ios_config:
        lines:
          - interface e5/0
          - description reserve
          - shutdown

    - name: Set spanning-tree mode to rapid-pvst
      ios_config:
        lines:
          - spanning-tree mode rapid-pvst

    - name: Set spanning-tree priority for VLAN 10
      ios_config:
        lines:
          - spanning-tree vlan 10 priority 12288

    - name: Set spanning-tree priority for VLAN 44
      ios_config:
        lines:
          - spanning-tree vlan 44 priority 4096

    - name: Save configuration
      ios_command:
        commands:
          - write mem
