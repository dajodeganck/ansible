- name: Backup and synchronize Cisco Switch configurations
  hosts: switches
  gather_facts: no

  tasks:
    - name: Gather current date and time
      local_action: command date +"%Y-%m-%d_%H-%M-%S"
      register: datetime
      changed_when: false

    - name: Create primary backup directory if it doesn't exist
      file:
        path: "/home/semaphore/backups"
        state: directory
        mode: '0755'

    - name: Ensure secondary backup directory exists
      file:
        path: "/home/semaphore/ansible/backups"
        state: directory
        mode: '0775'
        owner: semaphore
        group: semaphore
      become: true
      become_user: root

    - name: Set proper ownership for the entire Ansible directory
      file:
        path: "/home/semaphore/ansible"
        state: directory
        owner: semaphore
        group: semaphore
        recurse: true
      become: true
      become_user: root

    - name: Configure Git to recognize the Ansible directory as safe
      command: git config --global --add safe.directory /home/semaphore/ansible
      become: true
      become_user: semaphore

    - name: Gather running configuration from Cisco devices
      ios_command:
        commands: show running-config
      register: running_config

    - name: Save running configuration to primary backup file
      copy:
        content: "{{ running_config.stdout[0] | default('No configuration data captured') }}"
        dest: "/home/semaphore/backups/{{ inventory_hostname }}-running-config-{{ datetime.stdout }}.txt"

    - name: Synchronize backup directory to secondary location
      synchronize:
        src: /home/semaphore/backups/
        dest: /home/semaphore/ansible/backups/
        recursive: yes
        delete: no
      delegate_to: localhost

    - name: Adding updated backup files to Git
      shell: git add .
      args:
        chdir: "/home/semaphore/ansible"
      become: true
      become_user: semaphore

    - name: Committing the backup files
      shell: git commit -m 'Update device configurations'
      args:
        chdir: "/home/semaphore/ansible"
      become: true
      become_user: semaphore
      ignore_errors: yes  # This avoids errors if no changes are there to commit

    - name: Pushing changes to GitHub
      shell: git push origin main
      args:
        chdir: "/home/semaphore/ansible"
      become: true
      become_user: semaphore

    - name: Print configuration file status
      debug:
        msg: "Configuration file for {{ inventory_hostname }} saved and synchronized successfully."
