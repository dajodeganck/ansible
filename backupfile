- name: Backup Cisco Switches
  hosts: switches
  gather_facts: no
  tasks:
    - name: Gather current date and time
      local_action: command date +"%Y-%m-%d_%H-%M-%S"
      register: datetime
      changed_when: false

    - name: Create primary backup directory if it doesn't exist
      file:
        path: "/home/semaphore/backups"
        state: directory
        mode: '0755'

    - name: Create secondary backup directory if it doesn't exist
      file:
        path: "/home/semaphore/ansible/backups"
        state: directory
        mode: '0755'

    - name: Gather running configuration from Cisco devices
      ios_command:
        commands: show running-config
      register: running_config

    - name: Save running configuration to primary backup file
      copy:
        content: "{{ running_config.stdout[0] | default('No configuration data captured') }}"
        dest: "/home/semaphore/backups/{{ inventory_hostname }}-running-config-{{ datetime.stdout }}.txt"

    - name: Save running configuration to secondary backup file (for Ansible repo)
      copy:
        content: "{{ running_config.stdout[0] | default('No configuration data captured') }}"
        dest: "/home/semaphore/ansible/backups/{{ inventory_hostname }}-running-config-{{ datetime.stdout }}.txt"

    - name: Check if primary configuration file was created
      stat:
        path: "/home/semaphore/backups/{{ inventory_hostname }}-running-config-{{ datetime.stdout }}.txt"
      register: saved_primary_file

    - name: Check if secondary configuration file was created
      stat:
        path: "/home/semaphore/ansible/backups/{{ inventory_hostname }}-running-config-{{ datetime.stdout }}.txt"
      register: saved_secondary_file

    - name: Print primary configuration file status
      debug:
        msg: "Primary configuration file created: {{ saved_primary_file.stat.exists }}"

    - name: Print secondary configuration file status
      debug:
        msg: "Secondary configuration file created: {{ saved_secondary_file.stat.exists }}"
    - name: Commit and push the changes to GitHub
      block:
        - name: Adding updated backup files to Git
          shell: git add backups/*
          args:
            chdir: "/home/semaphore/ansible"  # Ensure this is your local git repository path

        - name: Committing the backup files
          shell: git commit -m 'Update device configurations'
          args:
            chdir: "/home/semaphore/ansible"  # Ensure this is your local git repository path
          ignore_errors: yes  # This avoids errors if no changes are there to commit

        - name: Pushing changes to GitHub
          shell: git push origin main
          args:
            chdir: "/home/semaphore/ansible"  # Ensure this is your local git repository path
      delegate_to: localhost
      run_once: true
