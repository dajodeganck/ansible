- name: Backup and synchronize Cisco Switch configurations
  hosts: switches
  gather_facts: no

  tasks:
    - name: Gather current date and time
      local_action: command date +"%Y-%m-%d_%H-%M-%S"
      register: datetime
      changed_when: false

    - name: Create primary backup directory if it doesn't exist
      file:
        path: "/home/semaphore/backups"
        state: directory
        mode: '0755'

    - name: Ensure secondary backup directory exists
      file:
        path: "/home/semaphore/ansible/backups"
        state: directory
        mode: '0755'

    - name: Gather running configuration from Cisco devices
      ios_command:
        commands: show running-config
      register: running_config

    - name: Save running configuration to primary backup file
      copy:
        content: "{{ running_config.stdout[0] | default('No configuration data captured') }}"
        dest: "/home/semaphore/backups/{{ inventory_hostname }}-running-config-{{ datetime.stdout }}.txt"

    - name: Synchronize backup directory to secondary location
      synchronize:
        src: /home/semaphore/backups/
        dest: /home/semaphore/ansible/backups/
        recursive: yes
        delete: no  # adjust this according to your needs
      delegate_to: localhost

    - name: Print configuration file status
      debug:
        msg: "Configuration file for {{ inventory_hostname }} saved and synchronized successfully."

