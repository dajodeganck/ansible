---
- name: Configure Cisco switches
  hosts: switches
  gather_facts: no
  tasks:
    - name: Ensure the switch is in enable mode
      ios_command:
        commands:
          - enable
          - configure terminal

    - name: Disable IP domain lookup
      ios_config:
        lines:
          - no ip domain-lookup

    - name: Set hostname
      ios_config:
        lines:
          - hostname {{ inventory_hostname }}

    - name: Remove existing banner motd
      ios_config:
        lines:
          - no banner motd
      ignore_errors: yes

    - name: Configure the login banner
      cisco.ios.ios_banner:
        banner: motd
        text: Unauthorized access to this device is prohibited!
        state: present

    - name: Configure SNMP community
      ios_config:
        lines:
          - snmp-server community public RO

    - name: Configure SNMP host
      ios_config:
        lines:
          - snmp-server host 10.10.44.5 version 2c public

    - name: Enable SNMP traps
      ios_config:
        lines:
          - snmp-server enable traps

    - name: Create VLAN 10
      ios_config:
        lines:
          - vlan 10
          - name Users

    - name: Create VLAN 44
      ios_config:
        lines:
          - vlan 44
          - name Management

    - name: Configure interface VLAN 10 description
      ios_config:
        lines:
          - interface vlan 10
          - description Users
          - no shutdown

    - name: Configure interface VLAN 44
      ios_config:
        lines:
          - interface vlan 44
          - description management
          - ip address {{ ansible_host }} 255.255.255.224
          - no shutdown

    - name: Set default gateway
      ios_config:
        lines:
          - ip default-gateway 10.10.44.10

    - name: Set enable secret
      ios_config:
        lines:
          - enable secret {{ ansible_password }}

    - name: Enable service password encryption
      ios_config:
        lines:
          - service password-encryption

    - name: Set IP domain name
      ios_config:
        lines:
          - ip domain-name syntra.be

    - name: Create user with secret
      ios_config:
        lines:
          - username {{ ansible_user }} secret {{ ansible_password }}

    - name: Configure console line password
      ios_config:
        lines:
          - line console 0
          - password {{ ansible_password }}

    - name: Enable login on console line
      ios_config:
        lines:
          - line console 0
          - login

    - name: Configure VTY lines for SSH transport
      ios_config:
        lines:
          - line vty 0 4
          - transport input ssh
          - login local
          - exit
      ignore_errors: yes

    - name: Generate RSA key
      ios_command:
        commands:
          - crypto key generate rsa modulus 2048
          - exit
      ignore_errors: yes

    - name: Configure uplink interfaces
      ios_config:
        lines:
          - interface range e0/0 - 1
          - description uplink
          - switchport access vlan 10
          - switchport trunk encapsulation dot1q
          - switchport mode trunk
          - switchport trunk allowed vlan 10,44
          - no shutdown

    - name: Configure user interfaces
      ios_config:
        lines:
          - interface range e0/2 - 3, e1/0 - 3, e2/0 - 3, e3/0 - 3, e4/0 - 3, e5/0 - 3
          - description Users
          - switchport access vlan 10
          - switchport trunk encapsulation dot1q
          - switchport mode trunk
          - switchport trunk allowed vlan 10,44
          - no shutdown

    - name: Set spanning-tree mode to rapid-pvst
      ios_config:
        lines:
          - spanning-tree mode rapid-pvst

    - name: Set spanning-tree priority for VLAN 10
      ios_config:
        lines:
          - spanning-tree vlan 10 priority 12288

    - name: Set spanning-tree priority for VLAN 44
      ios_config:
        lines:
          - spanning-tree vlan 44 priority 4096

    - name: Save configuration
      ios_command:
        commands:
          - write mem
