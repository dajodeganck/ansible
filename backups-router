---
- name: Backup MikroTik Routers
  hosts: mikrotik_routers
  gather_facts: no
  tasks:
    - name: Gather current date and time
      local_action: command date +"%Y-%m-%d_%H-%M-%S"
      register: datetime
      changed_when: false

    - name: Create backup directory if it doesn't exist
      file:
        path: "/home/semaphore/backups"
        state: directory
        mode: '0755'

    - name: Get MikroTik Configuration
      routeros_command:
        commands:
          - /export
      register: output

    - name: Save MikroTik configuration to a file
      copy:
        content: "{{ output.stdout[0] | default('No configuration data captured') }}"
        dest: "/home/semaphore/backups/{{ inventory_hostname }}-running-config-{{ datetime.stdout }}.txt"
